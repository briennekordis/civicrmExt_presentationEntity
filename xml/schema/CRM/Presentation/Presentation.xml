<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Presentation</base>
  <class>Presentation</class>
  <name>civicrm_presentation</name>
  <comment>Presentation Custom Entity</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Presentation ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>topic_id</name>
    <title>Topic</title>
    <type>int</type>
    <html>
      <type>CheckBox</type>
    </html>
    <comment>Topic of presentation</comment>
  </field>
  <index>
    <name>index_topic_type</name>
    <fieldname>topic_id</fieldname>
  </index>
  <pseudoconstant>
    <optionGroupName>pres_topic</optionGroupName>
    <keyColumn>label</keyColumn>
  </pseudoconstant>

  <field>
    <name>title</name>
    <title>Title</title>
    <type>text</type>
    <html>
      <type>Text</type>
    </html>
    <comment>Title of presentation</comment>
  </field>
  <index>
    <name>index_title_name</name>
    <fieldname>title</fieldname>
  </index>

  <field>
    <name>date</name>
    <title>Presentation date</title>
    <type>date</type>
    <html>
      <type>Select Date</type>
    </html>
    <comment>Date of original presentation</comment>
  </field>
  <index>
    <name>index_date</name>
    <fieldname>date</fieldname>
  </index>

  <field>
    <name>audience_id</name>
    <title>Audience</title>
    <type>int</type>
    <html>
      <type>CheckBox</type>
    </html>
    <comment>Target audience of original presentation</comment>
  </field>
  <index>
    <name>index_audience_type</name>
    <fieldname>audience_id</fieldname>
  </index>
  <pseudoconstant>
    <optionGroupName>pres_audience</optionGroupName>
    <keyColumn>label</keyColumn>  
  </pseudoconstant>

  <field>
    <name>type_id</name>
    <title>Type</title>
    <type>int</type>
    <html>
      <type>Select</type>
    </html>
    <comment>Format of original presentation</comment>
  </field>
  <index>
    <name>index_type_name</name>
    <fieldname>type_id</fieldname>
  </index>
  <pseudoconstant>
    <optionGroupName>pres_type</optionGroupName>
    <keyColumn>label</keyColumn>
  </pseudoconstant>

  <field>
    <name>duration</name>
    <title>Duration</title>
    <type>int</type>
    <html>
      <type>Integer</type>
    </html>
    <comment>Length of original presentation in minutes</comment>
  </field>

  <field>
    <name>notes</name>
    <title>Notes</title>
    <type>longtext</type>
    <html>
      <type>Text</type>
    </html>
    <comment>Additional Notes</comment>
  </field>

  <field>
    <name>file</name>
    <title>File</title>
    <type>text</type>
    <html>
      <type>File</type>
    </html>
    <comment>Presentation file</comment>
  </field>

</table>
