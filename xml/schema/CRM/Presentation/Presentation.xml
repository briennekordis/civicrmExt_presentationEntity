<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Presentation</base>
  <class>Presentation</class>
  <name>civicrm_presentation</name>
  <comment>Presentation Custom Entity</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Presentation ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>topic_id</name>
    <title>Topic</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <type>Select</type>
      <multiple>1</multiple>
    </html>
    <serialize>JSON</serialize>
    <comment>Topic of presentation</comment>
    <pseudoconstant>
      <optionGroupName>pres_topic</optionGroupName>
    </pseudoconstant>
  </field>
  <index>
    <name>index_topic_id</name>
    <fieldName>topic_id</fieldName>
  </index>

  <field>
    <name>title</name>
    <title>Title</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <type>Text</type>
    </html>
    <comment>Title of presentation</comment>
  </field>
  <index>
    <name>index_title</name>
    <fieldName>title</fieldName>
  </index>

  <field>
    <name>date</name>
    <title>Presentation date</title>
    <type>date</type>
    <html>
      <type>Select Date</type>
    </html>
    <comment>Date of original presentation</comment>
  </field>
  <index>
    <name>index_date</name>
    <fieldName>date</fieldName>
  </index>

  <field>
    <name>audience_id</name>
    <title>Audience</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <type>Select</type>
      <multiple>1</multiple>
    </html>
    <serialize>JSON</serialize>
    <comment>Target audience of original presentation</comment>
    <pseudoconstant>
      <optionGroupName>pres_audience</optionGroupName>
    </pseudoconstant>
  </field>
  <index>
    <name>index_audience_id</name>
    <fieldName>audience_id</fieldName>
  </index>

  <field>
    <name>type_id</name>
    <title>Type</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <type>Select</type>
      <multiple>1</multiple>
    </html>
    <serialize>JSON</serialize>
    <comment>Format of original presentation</comment>
    <pseudoconstant>
      <optionGroupName>pres_type</optionGroupName>
    </pseudoconstant>
  </field>
  <index>
    <name>index_type_id</name>
    <fieldName>type_id</fieldName>
  </index>

  <field>
    <name>duration</name>
    <title>Duration</title>
    <type>int unsigned</type>
    <html>
      <type>Integer</type>
    </html>
    <comment>Length of original presentation in minutes</comment>
  </field>

  <field>
    <name>notes</name>
    <title>Notes</title>
    <type>longtext</type>
    <html>
      <type>Text</type>
    </html>
    <comment>Additional Notes</comment>
  </field>

</table>
