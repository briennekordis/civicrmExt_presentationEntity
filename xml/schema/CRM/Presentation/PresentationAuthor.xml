<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/PresentationAuthor</base>
  <class>PresentationAuthor</class>
  <name>civicrm_presentation_author</name>
  <comment></comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique PresentationAuthor ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
      <label>Author</label>
    </html>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
 
   <field>
    <name>presentation_id</name>
    <type>int unsigned</type>
    <comment>FK to Presentation</comment>
    <html>
      <type>EntityRef</type>
      <label>Presentation</label>
    </html>
    <pseudoconstant>
      <table>civicrm_presentation</table>
      <keyColumn>id</keyColumn>
      <labelColumn>title</labelColumn>
    </pseudoconstant>
  </field>
  <foreignKey>
    <name>id</name>
    <table>civicrm_presentation</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
</table>
